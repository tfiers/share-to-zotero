<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryLight</item>
        <item name="colorOnPrimary">@color/primaryText</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryLight</item>
        <item name="colorOnSecondary">@color/secondaryText</item>
    </style>

    <style name="TextAppearance.Zorro.SyncStatus" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Note: Default Small, Body1, and Body2 all have textSize 14sp. -->
    <style name="TextAppearance.Zorro.ItemDetailLabel" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Zorro.ItemDetailValue" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Zorro.ItemDetailValueTitle" parent="TextAppearance.Zorro.ItemDetailValue">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Zorro.ItemDetailValueAbstract" parent="TextAppearance.Zorro.ItemDetailValue">
        <!--<item name="android:textSize">14sp</item>-->
    </style>

</resources>
