<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/browsing_container">

    <fragment
        android:id="@+id/browsing_container"
        android:name="net.tomasfiers.zorro.ui.BrowsingContainerFragment"
        android:label="BrowsingContainerFragment"
        tools:layout="@layout/browsing__container_fragment">
        <action
            android:id="@+id/action_browsing_to_showItem"
            app:destination="@id/showItemFragment" />
    </fragment>

    <fragment
        android:id="@+id/showItemFragment"
        android:name="net.tomasfiers.zorro.ui.ShowItemFragment"
        android:label="ShowItemFragment"
        tools:layout="@layout/show_item_fragment" >
        <argument
            android:name="itemKey"
            app:argType="string" />
    </fragment>

</navigation>
